<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cek">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_cek" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pelanggan:" />

        <EditText
            android:id="@+id/editNamaPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Nama Anda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Meter:"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editNomorMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Nomor Meter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Penggunaan:"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editJumlahPenggunaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan 2 digit angka di kotak kuning meteran" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembayaran:"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTanggalPembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas:"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTanggalPembayaran"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioKelas1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas I"/>

        <RadioButton
            android:id="@+id/radioKelas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas II"/>

        <RadioButton
            android:id="@+id/radioKelas3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas III" />
        </RadioGroup>

        <Button
            android:id="@+id/btnCekTagihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CEK TAGIHAN ANDA"
            android:backgroundTint="#00ADEF"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
